<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

<body>

    <%- include('../partials/nav.ejs') %>

    <div class="blogs-display content">
        <h2>All blogs</h2>
        <select name="categories" id="categories" class="index-categories" onchange="categorySelected()">
            <option value="all" selected>All</option>
            <% categories.forEach(element => { %>
                <option value="<%= element.name%>"><%= element.name %></option>
            <% }); %> 
        </select>
        <% if(blogs.length > 0) {%>
        <% blogs.forEach(blog => { %>
        <div class="blogs">
            <a href="/blogs/<%= blog._id %>">
                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
                <p class="author"><i><%= "by " + blog.author %></i></p>
                <p class="date"><i><%= blog.date %> </i></p>
            </a>
        </div>
        <% }) %>
        <% }else { %>
        <p>There is no blogs.</p>
        <% } %>
    </div>
    <%- include('../partials/footer.ejs') %>

    <script>

        function categorySelected() {
            var sel = document.getElementById('categories').dataset.doc;
            var option = document.getElementById('categories').value = sel;

            var endpoint = `/blogs/category`;
            
        }
        
    </script>
</body>

</html>